@model ProfileCardApp.Models.ProfileModel

<div class="card text-center shadow rounded-4 border-0 p-4 bg-white">
    <img src="@Model.ImageUrl" alt="@Model.Name" class="rounded-circle mx-auto mb-3 shadow-sm" style="width: 120px; height: 120px; object-fit: cover;" />
    
    <h4 class="mb-1">@Model.Name</h4>
    <p class="text-muted mb-4">@Model.Role</p>

    @await Html.PartialAsync("_ProfileStats", Model)
</div>
