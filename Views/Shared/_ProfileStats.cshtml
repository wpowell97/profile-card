@model ProfileCardApp.Models.ProfileModel

<div class="row text-center border-top pt-4">
    <div class="col-4">
        <div class="fw-bold fs-5">@Model.Followers</div>
        <div class="text-muted small">
            <i class="bi bi-people-fill me-1"></i>Followers
        </div>
    </div>
    <div class="col-4">
        <div class="fw-bold fs-5">@Model.Likes</div>
        <div class="text-muted small">
            <i class="bi bi-hand-thumbs-up-fill me-1"></i>Likes
        </div>
    </div>
    <div class="col-4">
        <div class="fw-bold fs-5">@Model.Photos</div>
        <div class="text-muted small">
            <i class="bi bi-images me-1"></i>Photos
        </div>
    </div>
</div>
